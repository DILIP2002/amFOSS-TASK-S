var message = "HAI"; //BODY of the message
var interval = 0.5  ; // time required to sent one one messages nothing timeinterval or GAP 
var count = 10000 ; //count
var notifyInterval = 5 ; //notification of interval
var i = 0 ;
var timer = setInterval(function(){
	document.getElementsByClassName('composer_rich_textarea')[0].innerHTML = message;
	$('.im_submit').trigger('mousedown');	
	i++; //i++ means adds the count nothing but its a type of loop
	if( i == count ) //if I is equal to count
	clearInterval(timer);
	if( i % notifyInterval == 0)
	console.log(i + ' MESSAGES SENT'); //to console log number of messages have to sent and * i what we have given the in put
} , interval * 1000 ) ;
// finally task 9 has been completed
